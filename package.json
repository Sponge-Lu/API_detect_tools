{
  "name": "api-hub-management-tools",
  "version": "2.1.11",
  "description": "API Hub Management Tools - Professional API management and monitoring tool",
  "author": "API Hub Team",
  "main": "dist/main/main.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:main\" \"npm run dev:renderer\"",
    "dev:main": "tsc -p tsconfig.main.json && electron .",
    "dev:renderer": "vite",
    "build": "npm run build:main && npm run build:renderer",
    "build:main": "tsc -p tsconfig.main.json",
    "build:renderer": "tsc && vite build",
    "dist": "npm run build && electron-builder --win",
    "dist:win": "npm run build && electron-builder --win",
    "dist:mac": "npm run build && electron-builder --mac",
    "dist:linux": "npm run build && electron-builder --linux",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,css}\"",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "prepare": "husky"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "src/**/*.css": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@iarna/toml": "^2.2.5",
    "@tanstack/react-virtual": "^3.13.12",
    "axios": "^1.6.0",
    "electron-log": "^5.4.3",
    "pinyin-pro": "^3.27.0",
    "puppeteer-core": "^21.0.0",
    "webdav": "^5.8.0",
    "zod": "^4.1.13",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@types/node": "^20.0.0",
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^8.48.0",
    "@typescript-eslint/parser": "^8.48.0",
    "@vitejs/plugin-react": "^4.3.0",
    "autoprefixer": "^10.4.20",
    "clsx": "^2.1.1",
    "concurrently": "^8.2.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.0.0",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "fast-check": "^4.3.0",
    "husky": "^9.1.7",
    "jsdom": "^27.2.0",
    "lint-staged": "^16.2.7",
    "lucide-react": "^0.462.0",
    "postcss": "^8.4.49",
    "prettier": "^3.6.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "tailwindcss": "^3.4.15",
    "terser": "^5.31.0",
    "typescript": "^5.6.0",
    "typescript-eslint": "^8.48.0",
    "vite": "^5.4.0",
    "vitest": "^4.0.14"
  },
  "build": {
    "buildVersion": "2.1.11",
    "appId": "com.apihub.management",
    "productName": "API Hub Management Tools",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "dist-renderer/**/*",
      "!**/*.map",
      "!**/*.md"
    ],
    "asarUnpack": [
      "**/*.node"
    ],
    "asar": true,
    "compression": "maximum",
    "electronLanguages": [
      "zh-CN",
      "en-US"
    ],
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "build/icon.ico",
      "requestedExecutionLevel": "asInvoker"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": "always",
      "createStartMenuShortcut": true,
      "deleteAppDataOnUninstall": true,
      "artifactName": "${productName} Setup ${buildVersion}.${ext}",
      "installerIcon": "build/icon.ico",
      "uninstallerIcon": "build/icon.ico",
      "installerHeaderIcon": "build/icon.ico"
    },
    "portable": {
      "artifactName": "${productName}-${buildVersion}-portable.exe"
    },
    "mac": {
      "target": ["dmg", "zip"],
      "icon": "build/icon.png",
      "category": "public.app-category.developer-tools",
      "artifactName": "${productName}-${buildVersion}-mac.${ext}"
    },
    "dmg": {
      "artifactName": "${productName}-${buildVersion}.${ext}"
    },
    "linux": {
      "target": ["AppImage", "deb"],
      "icon": "build/icon.png",
      "category": "Development",
      "artifactName": "${productName}-${buildVersion}-linux.${ext}"
    },
    "appImage": {
      "artifactName": "${productName}-${buildVersion}.AppImage"
    },
    "deb": {
      "artifactName": "${productName}-${buildVersion}.deb"
    },
    "extraResources": [
      {
        "from": "build",
        "to": ".",
        "filter": [
          "icon.ico"
        ]
      }
    ]
  }
}
