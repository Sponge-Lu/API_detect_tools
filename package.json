{
  "name": "api-hub-management-tools",
  "version": "2.0.0",
  "description": "API Hub Management Tools - Professional API management and monitoring tool",
  "main": "dist/main.js",
  "type": "commonjs",
  "scripts": {
    "dev": "concurrently \"npm run dev:main\" \"npm run dev:renderer\"",
    "dev:main": "tsc -p tsconfig.main.json && electron .",
    "dev:renderer": "vite",
    "build": "npm run build:main && npm run build:renderer",
    "build:main": "tsc -p tsconfig.main.json",
    "build:renderer": "tsc && vite build",
    "dist": "npm run build && electron-builder --win"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "puppeteer-core": "^21.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.0",
    "autoprefixer": "^10.4.20",
    "clsx": "^2.1.1",
    "concurrently": "^8.2.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.0.0",
    "lucide-react": "^0.462.0",
    "postcss": "^8.4.49",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "tailwindcss": "^3.4.15",
    "terser": "^5.31.0",
    "typescript": "^5.6.0",
    "vite": "^5.4.0"
  },
  "build": {
    "appId": "com.apihub.management",
    "productName": "API Hub Management Tools",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "dist-renderer/**/*",
      "!**/*.map",
      "!**/*.md"
    ],
    "asarUnpack": [
      "**/*.node"
    ],
    "asar": true,
    "compression": "maximum",
    "electronLanguages": ["zh-CN", "en-US"],
    "win": {
      "target": ["nsis", "portable"],
      "icon": "build/icon.ico",
      "requestedExecutionLevel": "asInvoker",
      "signAndEditExecutable": false
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": "always",
      "createStartMenuShortcut": true,
      "deleteAppDataOnUninstall": true
    },
    "portable": {
      "artifactName": "${productName}-${version}-portable.exe"
    },
    "extraResources": [
      {
        "from": "build",
        "to": ".",
        "filter": ["icon.ico"]
      }
    ]
  }
}